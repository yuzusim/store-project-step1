{{> layout/header}}

<br><br>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 mx-auto">

            <div class="row g-5">
                <form action="/order/add" method="post" novalidate="">
                    <!-- 내가 담은 목록 -->
                    <div class="col-md-5 col-lg-4 order-md-last">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary">주문 상품</span>
                            <span class="badge bg-primary rounded-pill">2</span>
                        </h4>

                        <!-- 반복되는 주문 내용 -->
                        {{#orderList}}
                            <ul class="list-group mb-3">
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <input type="hidden" name="userId" value="{{userId}}">
                                    <input type="hidden" name="productId" value="{{productId}}">
                                    <input type="hidden" name="status" value="주문완료">
                                    <div>
                                        <input style="font-weight: bold" type="text" class="form-control" id="pName"
                                               name="pName" value="{{productId.name}}" readonly>
                                        <input type="text" class="form-control" id="buyQty" name="orderQty"
                                               value="{{orderQty}}" readonly>
                                    </div>
                                    <input type="text" class="form-control" id="price" name="price" value="{{productId.price}}"
                                           readonly>
                                </li>

                                <!-- 합계 등 추가 필드 -->

                            </ul>

                        <!-- 반복되는 주문 내용 끝 -->

                        <!-- 합계 등 추가 항목 -->

                    </div>
                    <!-- 내가 담은 목록 끝 -->

                    <div class="col-md-7 col-lg-8">
                        <h4 class="mb-3">[ 주문 ]</h4>
                        <!-- 주문 개인정보 적기 -->
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="mb-3 mt-3 form-group">
                                    이름 <input id="" name="username" type="text" class="form-control"
                                              value="{{userId.username}}">
                                </div>
                                <div class="mb-3 mt-3 form-group">
                                    주소 <input id="address" name="address" type="text" class="form-control"
                                              value="{{userId.address}}">
                                </div>
                                <div class="mb-3 mt-3 form-group">
                                    전화번호 <input id="phone" name="phone" type="text" class="form-control"
                                                value="{{userId.phone}}">
                                </div>
                            </div>
                        {{/orderList}}
                            <hr class="my-4">
                            <!-- 결제 방법 -->
                            <h4 class="mb-3">[ 결제 방법 ]</h4>
                            <div class="my-3">
                                <div class="form-check">
                                    <input id="credit" name="payment" type="radio" class="form-check-input"
                                           value="신용카드">
                                    <label class="form-check-label" for="credit">신용카드</label>
                                </div>
                                <div class="form-check">
                                    <input id="cash" name="payment" type="radio" class="form-check-input"
                                           value="계좌이체">
                                    <label class="form-check-label" for="cash">계좌이체</label>
                                </div>
                            </div>
                            <!-- 결제 방법 끝 -->
                            <hr class="my-4">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">주문하기</button>
                        </div>
                        <!-- 주문 개인정보 적기 끝 -->
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}
