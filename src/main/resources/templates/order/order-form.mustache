{{> layout/header}}
<style>

</style>

<div class="container pt-5" style="text-align: center">

    <!--주문 테이블-->
    <div class="cart-w d-flex">
        <div class="cart-L">
            <table class="table table-striped" style="vertical-align: middle">
                <tr>
                    <th>번호</th>
                    <th>상품명</th>
                    <th>구매수량</th>
                    <th>상품가격</th>
                    <th>선택하기</th>
                </tr>
                {{#orderSaveList}}
                    <input type="hidden" name="productId" value="{{id}}">
                    <tr>
                        <td>{{id}}</td>
                        <td>
                            <div style="width:150px; margin:0 auto;">
                                <img src="/upload/{{product.img}}" alt="Product Image"
                                     style="max-width: 100%; max-height: 100%;">
                            </div>
                            {{name}}
                        </td>
                        <!--구매수량-->
                        <td>
                            {{orderQty}}
                        </td>
                        <td>
                            {{price}}
                        </td>
                        <td>
                            <!--주문하기 / 주문 삭제 체크박스-->

                            <label class="form-check-label " style="margin: 0 auto">
                                <input type="hidden" name="status" value="">
                                <input class="form-check-input" type="checkbox" name="status"
                                       value="" style="width:20px !important; margin: 0 auto">
                            </label>

<!--                            <div class="new-create-button"> form-check-->
<!--                                <form action="/order/list" method="get" >-->
<!--                                    <input type="hidden" name="orderId" value="id}}">-->
<!--                                    <button type="submit">status}}</button>-->
<!--                                </form>-->
<!--                            </div>-->
                        </td>
                    </tr>
                {{/orderSaveList}}
            </table>
        </div>
        <!--주문 테이블-->

        <!--배송 정보 및 주문 버튼-->
        <div class="cart-R ml-10">
            <div>
                <h3>[ 주문자 정보 ]</h3>
                <p>{{user.username}}</p>
            </div>
            <!--주문, 상세하기 버튼-->
            <div class="">
                <div class="mb-10">
                    <a href="/order/list" class="btn btn-warning" style="width:300px">주문하기</a>
                </div>
                <div class="mb">
                    <button id="deleteButton" class="btn btn-warning" style="width:300px" disabled>주문 삭제</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // 수량 증가 버튼 클릭 이벤트
        $(".increase-btn").click(function () {
            var $quantityInput = $(this).siblings(".quantity");
            var currentQuantity = parseInt($quantityInput.val());
            $quantityInput.val(currentQuantity + 1);
        });

        // 수량 감소 버튼 클릭 이벤트
        $(".decrease-btn").click(function () {
            var $quantityInput = $(this).siblings(".quantity");
            var currentQuantity = parseInt($quantityInput.val());
            if (currentQuantity > 1) {
                $quantityInput.val(currentQuantity - 1);
            }
        });
    });
</script>

