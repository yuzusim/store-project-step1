{{> layout/header}}
<div class="container pt-5" style="text-align: center">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>번호</th>
            <th>상품명</th>
            <th>상품가격</th>
            <th>상품수량</th>
            <th>상세보기</th>
        </tr>
        </thead>
        <tbody>
        {{#productList}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{qty}}</td>
                <td><a href="/product/{{id}}" class="product btn btn-warning">상세보기</a></td>
            </tr>
        {{/productList}}
        </tbody>
    </table>

</div>
{{> layout/footer}}